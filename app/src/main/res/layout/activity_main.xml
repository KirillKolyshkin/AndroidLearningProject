<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#FFC107">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtBalance"
            android:text="Баланс"
            android:textSize="48dp"
            android:textColor="#FFF"
            android:background="@drawable/text_border"
            android:padding="3dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="232dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="592dp"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEBalance"
            android:text="R 0000"
            android:textSize="46dp"


            android:layout_alignParentBottom="true"
            android:layout_marginBottom="530dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="252dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTarget"
            android:text="Цель"
            android:textSize="48dp"
            android:textColor="#FFF"
            android:background="@drawable/text_border"
            android:padding="3dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="280dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="442dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtETarget"
            android:text="Таргет"
            android:textSize="46dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="250dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="380dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOstatok"
            android:text="Остаток На День"
            android:textSize="48dp"
            android:textColor="#FFF"
            android:background="@drawable/text_border"
            android:padding="3dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="295dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEOstatok"
            android:text="Я не знаю"
            android:textSize="46dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="182dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="231dp"
    />


    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnList"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_target"
            android:paddingTop="15dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="180dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="88dp"
    />

    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnPlus"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_plus"
            android:paddingTop="15dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="280dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="88dp"
    />

    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnHistory"
            android:background="@drawable/circle"
            android:drawableTop="@drawable/ic_history"
            android:paddingTop="15dp"


            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="88dp"
    />


</RelativeLayout>

